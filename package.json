{
    "name": "orlof-xcbasic3",
    "displayName": "XC=BASIC 3 Language",
    "description": "Syntax highlighting for XC=BASIC 3",
    "publisher": "RealOrlof",
    "version": "1.0.3",
    "engines": {
        "vscode": "^1.33.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "c64",
        "6502",
        "basic",
        "commodore",
        "grammar"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/orlof/xcb3-vscode-ext.git"
    },
    "icon": "images/icon.png",
    "contributes": {
        "languages": [
            {
                "id": "xcbasic3",
                "aliases": [
                    "XC-BASIC3",
                    "xcbasic3"
                ],
                "extensions": [
                    ".bas"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xcbasic3",
                "scopeName": "source.xcbasic3",
                "path": "./syntaxes/xcbasic3.tmLanguage.json",
                "embeddedLanguages": {
                    "source.dasm": "dasm",
                    "meta.embedded.block.dasm": "dasm"
                }
            }
        ],
        "configuration": [
            {
                "title": "XC=BASIC 3 configuration",
                "properties": {
                    "xcbasic3.basefolder": {
                        "type": "string",
                        "default": "",
                        "description": "Absolute path of the XC-BASIC3 base folder (the one containing the 'bin' folder)."
                    },
                    "xcbasic3.vice": {
                        "type": "string",
                        "default": "",
                        "description": "OPTIONAL: Absolute path of the VICE base folder (the one containing the 'bin' folder)."
                    },
                    "xcbasic3.debugger": {
                        "type": "string",
                        "default": "",
                        "description": "OPTIONAL: Absolute path of the Retro Debugger."
                    },
                    "xcbasic3.packer": {
                        "type": "string",
                        "default": "",
                        "description": "OPTIONAL: Absolute path packer (e.g. Exomizer)."
                    }
                }
            }
        ]
    },
    "dependencies": {
        "@vscode/vsce": "^2.22.0"
    }
}
