{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "XC=BASIC Run File",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.emulator}",
                "args": [
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.emulator}",
                "args": [
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "XC=BASIC Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "XC=BASIC Debug File",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.debugger}",
                "args": [
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.debugger}",
                "args": [
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "XC=BASIC Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "XC=BASIC Compile File",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.basefolder}",
                "args": [
                    "${file}",
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.basefolder}",
                "args": [
                    "${file}",
                    "${fileBasenameNoExtension}.prg"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "XC=BASIC Build",
            "type": "shell",
            "osx": {
                "command": "${config:xcbasic3.builder}",
                "args": [
                    "-format",
                    "${fileBasenameNoExtension},of",
                    "d64",
                    "${fileBasenameNoExtension}.d64",
                    "-attach",
                    "${fileBasenameNoExtension}.d64",
                    "-write",
                    "${fileBasenameNoExtension}.prg",
                    "${fileBasenameNoExtension}"
                ]
            },
            "windows": {
                "command": "${config:xcbasic3.builder}",
                "args": [
                    "-format",
                    "${fileBasenameNoExtension},of",
                    "d64",
                    "${fileBasenameNoExtension}.d64",
                    "-attach",
                    "${fileBasenameNoExtension}.d64",
                    "-write",
                    "${fileBasenameNoExtension}.prg",
                    "${fileBasenameNoExtension}"
                ]
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "XC=BASIC Compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
